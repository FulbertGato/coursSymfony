{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="{{path('classe_save')}}">
                        <div class="row">
                       
                        <div class="col-10">
                            <div class="col-md-10">
                                <input class="form-control" type="text" name="libelle" value="{% if classeSelect is defined %}{{classeSelect.libelle}}{% endif %}" placeholder="Libelle">
                                 <input hidden type="text" name="id" value="{% if classeSelect is defined %}{{classeSelect.id}}{% else %} 0 {% endif %}">
                            </div>
                         </div>
                          <div class="col-2">

                            <div class="col-md-2">
                            {% if classeSelect is defined %}
                                <button type="submit" name="btn_save" class="btn btn-warning">Modifier</button>
                            {% else %}
                             <button type="submit" name="btn_save" class="btn btn-success">Ajouter</button>
                            {% endif %}
                              
                            </div>

                         </div>
                        </div> 
                    </form>
                      
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
        
                                        <h4 class="card-title">Default Datatable</h4>
                                        <p class="card-title-desc">DataTables has most features enabled by
                                            default, so all you need to do to use it with your own tables is to call
                                            the construction function: <code>$().DataTable();</code>.
                                        </p>

                                         {% for message in app.flashes('error_message') %}
                                        <div class="alert alert-danger text-center">{{ message}}</div>
                                         {% endfor %}
        
                                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                            <tr>
                                               <th>ID</th>
                                                <th>Libelle</th>
                                                <th>Nombres Inscriptions</th>
                                                <th>Nombres Cours</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                           
                                            {% for classe in classes %}
                                            
                                            <tr>
                                               <td>CL{{classe.id}}</td>
                                                <td>{{classe.libelle}}</td>
                                                <td>{{classe.inscriptions|length}}</td>
                                                <td>{{classe.cours|length}}</td>
                                                <td>
                                                <a  href="{{path('classe_edit',{id:classe.id})}}" class="btn btn-warning" >Modifier </a>
                                                <a  href="{{path('classe_delete',{id:classe.id})}}" class="btn btn-danger" >Supprimer</a>
                                                 
                                                </td>
                                                
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
        
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->

{% endblock %}

