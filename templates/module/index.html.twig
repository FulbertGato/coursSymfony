{% extends 'base.html.twig' %}

{% block title %}Modules{% endblock %}

{% block body %}
<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                
                   {{form(form)}}
                      
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
        
                                        <h4 class="card-title">Default Datatable</h4>
                                        <p class="card-title-desc">DataTables has most features enabled by
                                            default, so all you need to do to use it with your own tables is to call
                                            the construction function: <code>$().DataTable();</code>.
                                        </p>

                                         {% for message in app.flashes('error_message') %}
                                        <div class="alert alert-danger text-center">{{ message}}</div>
                                         {% endfor %}
        
                                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                            <tr>
                                               <th>ID</th>
                                                <th>Libelle</th>
                                                <th>Nombres Professeurs</th>
                                                <th>Nombres Cours</th>
                                                <th>Actions</th>
                                                
                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                           
                                            {% for m in modules %}
                                            
                                            <tr>
                                               <td>MD{{m.id}}</td>
                                                <td>{{m.libelle}}</td>
                                               
                                                <td>{{m.professeurs|length}}</td>
                                                <td>{{m.cours|length}}</td>
                                               
                                                <td>
                                                <a  href="{{path('module_edit',{id:m.id})}}" class="btn btn-warning" >Modifier </a>
                                                <a  href="{{path('module_delete',{id:m.id})}}" class="btn btn-danger" >Supprimer</a>
                                                 
                                                </td>
                                                
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
        
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->

{% endblock %}

